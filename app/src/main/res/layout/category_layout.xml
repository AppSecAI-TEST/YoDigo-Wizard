<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignLeft="@+id/elementGrid"
        android:layout_alignStart="@+id/elementGrid"
        android:layout_alignParentTop="true"
        android:background="@drawable/lefttab"
        android:src="@drawable/can_i_have" 
        android:contentDescription="@string/categoria" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/categoryImage"
        android:layout_alignBottom="@+id/categoryImage"
        android:layout_toRightOf="@+id/categoryImage"
        android:layout_toEndOf="@+id/categoryImage"
        android:background="@drawable/righttab"
        android:gravity="center"
        android:text="@string/categoria" />

    <GridView
        android:id="@+id/elementGrid"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:numColumns="3"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="30dp"
        android:background="@drawable/transparecy" >
    </GridView>

</RelativeLayout>